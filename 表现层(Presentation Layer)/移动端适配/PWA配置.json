  "shortcuts": [
    {
      "name": "生成今日菜单",
      "short_name": "今日菜单",
      "description": "智能生成今日推荐菜单",
      "url": "/?action=generate",
      "icons": [
        {
          "src": "icons/shortcut-generate-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "查看我的收藏",
      "short_name": "我的收藏",
      "description": "查看收藏的菜谱",
      "url": "/#我的收藏",
      "icons": [
        {
          "src": "icons/shortcut-favorites-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "购物清单",
      "short_name": "购物车",
      "description": "查看购物清单",
      "url": "/#购物车",
      "icons": [
        {
          "src": "icons/shortcut-cart-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "添加新菜谱",
      "short_name": "添加菜谱",
      "description": "贡献新菜谱到数据库",
      "url": "/?action=add",
      "icons": [
        {
          "src": "icons/shortcut-add-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-1280x800.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "桌面端主界面"
    },
    {
      "src": "screenshots/mobile-375x667.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "移动端菜单生成"
    },
    {
      "src": "screenshots/mobile-recipe-375x667.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "移动端菜谱详情"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+recipe",
      "url": "/recipe?id=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      },
      "name": "菜谱数据文件"
    }
  ],
  "launch_handler": {
    "client_mode": ["auto", "focus-existing"]
  },
  "handle_links": "auto",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "permissions": [
    "geolocation",
    "notifications",
    "storage",
    "clipboard-write"
  ],
  "featured": {
    "platform": ["windows", "android", "chromeos"],
    "category": ["food", "lifestyle"]
  },
  "debug": {
    "enabled": false,
    "show_errors": true,
    "log_level": "info"
  }
}
